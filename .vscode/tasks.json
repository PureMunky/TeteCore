{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "buildDockerDb",
      "dependsOn": [
        "build-web"
      ],
      "type": "shell",
      "command": "./run-db.sh"
    },
    {
      "label": "build-web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Tete.Web/Tete.Web.csproj"
      ],
      "dependsOn": "default-clean",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "default-clean",
      "command": "dotnet",
      "args": [
        "clean"
      ]
    },
    {
      "label": "unit-test",
      "command": "dotnet",
      "args": [
        "test",
        "-p:CollectCoverage=true",
        "-p:CoverletOutputFormat=\"opencover,lcov\"",
        "-p:CoverletOutput=coverage/lcov"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}